{
  "manifest_version": 2,

  "name": "Econsider",
  "description": "Econsider",
  "version": "1.0",

  // "browser_action": {
  //   "default_popup": "popup.html"
  // },

  "content_scripts": [
    {
      "matches": ["<all_urls>"], //*://*.amazon.de/*
      "js": ["libs/jquery-3.3.1.min.js", "content_base.js", "content.js"]
    }
  ],

  "page_action": {
    "default_title": "Econsider Extension",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["libs/jquery-3.3.1.min.js", "background.js"]
  },

  "permissions": [
    "activeTab",
    "storage"
  ]
}
